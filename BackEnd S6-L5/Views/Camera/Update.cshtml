@model BackEnd_S6_L5.Models.Entities.Camera

<h1>Modifica Camera</h1>

<form asp-action="Update" method="post">
    <input type="hidden" name="IdCamera" value="@Model.IdCamera" />

    <div class="mb-3">
        <label class="form-label">Numero Camera</label>
        <input type="number" class="form-control" name="Numero" value="@Model.Numero" />
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo Camera</label>
        <input type="text" class="form-control" name="Tipo" value="@Model.Tipo" />
    </div>

    <div class="mb-3">
        <label class="form-label">Prezzo</label>
        <input type="number" step="0.01" class="form-control" name="Prezzo" value="@Model.Prezzo" />
    </div>

    <button type="submit" class="btn btn-primary">Modifica Camera</button>
</form>
