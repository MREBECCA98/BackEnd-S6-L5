@{
    ViewData["Title"] = "Accesso Negato";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg text-center" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="display-4 text-danger">🚫</h1>
            <h2 class="card-title mb-3">Accesso Negato</h2>

            <p class="card-text text-muted">
                Non hai i permessi necessari per accedere a questa pagina.
            </p>

            <div class="d-grid gap-2 mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    Torna alla Home
                </a>

                <a asp-controller="User" asp-action="Login" class="btn btn-outline-secondary">
                    Effettua il Login
                </a>
            </div>
        </div>
    </div>
</div>
